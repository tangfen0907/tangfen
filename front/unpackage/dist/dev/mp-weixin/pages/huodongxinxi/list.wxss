page {
	background: #EEEEEE;
}
view {
	font-size: 28rpx;
}
.tabView {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	background: #ffffff;
	height: 60rpx;
	margin-bottom: 20rpx;
	white-space: nowrap;
	box-shadow: 0px 1px 14px 0px rgba(38, 38, 35, 0.07);
	margin-top: 6rpx;
}
.tab {
	text-align: center;
	display: inline-block;
	margin: 0 0 20rpx;
	padding: 0 20rpx;
	width: 96%;
	line-height: 68rpx;
	color: rgba(170, 170, 170, 1);
	font-size: 28rpx;
	border-radius: 0;
	border-width: 2rpx;
	border-style: solid;
	border-color: rgba(170, 170, 170, 1);
	background-color: #fff;
	box-shadow: 8rpx 8rpx 0 #AAAAAA;
}
.tabActive {
	margin: 0 0 20rpx;
	padding: 0 28rpx;
	width: 96%;
	line-height: 68rpx;
	color: rgba(96, 133, 0, 1);
	font-size: 28rpx;
	border-radius: 0;
	border-width: 2rpx;
	border-style: solid;
	border-color: rgba(96, 133, 0, 1);
	background-color: rgba(255, 255, 255, 1);
	box-shadow: 8rpx 8rpx 0px #608500;
}
.tab:last-of-type {
	border: none;
}
.uni-product-list {
	display: flex;
	width: 100%;
	flex-wrap: wrap;
	flex-direction: row;
	margin-top: 0rpx;
	/* justify-content: space-around; */
}
.uni-product {
	padding: 10rpx;
	margin: 10rpx;
	display: flex;
	flex-direction: column;
	background: #FFFFFF;
}
.image-view {
	height: 150rpx;
	width: 330rpx;
	margin: 12rpx 0;
}
.uni-product-image {
	border-radius: 10rpx;
	width:auto;
	height:200rpx;
}
.uni-product-title {
	width: 100%;
	word-break: break-all;
	display: -webkit-box;
	overflow: hidden;
	/* line-height: 1.5; */
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	padding-bottom: 10rpx;
	font-family: '\5FAE\8F6F\96C5\9ED1';
	font-size: 30rpx;
}
.uni-product-price {
	margin-top: 10rpx;
	font-size: 28rpx;
	line-height: 1.5;
	position: relative;
}
.uni-product-price-original {
	color: #e80080;
}
.uni-product-price-favour {
	color: #888888;
	text-decoration: line-through;
	margin-left: 10rpx;
}
.uni-product-tip {
	position: absolute;
	right: 10rpx;
	background-color: #ff3333;
	color: #ffffff;
	padding: 0 10rpx;
	border-radius: 5rpx;
}
uni-image>._div,
uni-image>._img {
	width: 100%;
	height: 140px;
	object-fit: cover;
}
.add-btn {
	position: fixed;
	left: 30rpx;
	right: 30rpx;




	bottom: 16rpx;

	z-index: 95;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 690rpx;
	height: 80rpx;
	font-size: 32rpx;
	color: #fff;
	background-color: red;
	border-radius: 10rpx;
	box-shadow: 1px 2px 5px rgba(219, 63, 96, 0.4);
}
.list {
	padding: 20rpx 20rpx 20rpx;
}
.listm {
	background: #fff;
	box-shadow: 0 0 2rpx rgba(0, 0, 0, 0.3);
	margin-bottom: 20rpx;
    padding: 10rpx 20rpx 20rpx;
   width:100%;
  max-height: 250rpx;
   border-radius: 10rpx;
}
.listmpic {
	border-radius: 10rpx;
	width: 166rpx;
	margin-right: 20rpx;
}
.listmr {
	/* width: 460upx; */
	display: inline-block;
	flex: 1;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
}
.news-box6 .dian::before {
	content: "";
	display: block;
	width: 8px;
	height: 8px;
	background-color: red;
	position: absolute;
	top: -4px;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	border-radius: 100%;
	z-index: 1;
}
.hide1 {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	line-clamp: 1;
	-webkit-box-orient: vertical;
}
.hide2 {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
}
.hide4 {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 4;
	line-clamp: 4;
	-webkit-box-orient: vertical;
}

